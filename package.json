{
  "name": "rehive",
  "version": "3.1.3",
  "description": "SDK for Rehive Platform and Extensions",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:core && npm run build:react",
    "build:core": "tsup src/index.ts --format cjs,esm --dts --minify --out-dir dist",
    "build:react": "tsup src/react.tsx --format cjs,esm --dts --minify --out-dir dist",
    "dev": "npm run build:core -- --watch & npm run build:react -- --watch",
    "codegen:openapi-ts": "bash scripts/codegen-openapi-ts.sh",
    "codegen:openapi-ts:clean": "rm -rf src/platform/user/openapi-ts src/platform/admin/openapi-ts src/extensions/conversion/openapi-ts src/extensions/mass-send/openapi-ts src/extensions/notifications/openapi-ts src/extensions/products/openapi-ts src/extensions/rewards/openapi-ts src/extensions/stellar/openapi-ts src/extensions/stellar-testnet/openapi-ts src/extensions/business/openapi-ts src/extensions/payment-requests/openapi-ts src/extensions/bridge/openapi-ts src/extensions/app/openapi-ts && npm run codegen:openapi-ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rehive",
    "sdk",
    "platform",
    "authentication",
    "conversion",
    "react",
    "react-native"
  ],
  "author": "Rehive",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "react": "^18.0.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "src/extensions",
    "src/platform",
    "src/shared"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.js"
    },
    "./extensions/conversion": {
      "types": "./src/extensions/conversion/index.ts",
      "import": "./src/extensions/conversion/index.js",
      "require": "./src/extensions/conversion/index.js"
    },
    "./extensions/conversion/*": {
      "types": "./src/extensions/conversion/*.ts",
      "import": "./src/extensions/conversion/*.js",
      "require": "./src/extensions/conversion/*.js"
    },
    "./extensions/*/": {
      "types": "./src/extensions/*/",
      "import": "./src/extensions/*/",
      "require": "./src/extensions/*/"
    },
    "./platform/user/*": {
      "types": "./src/platform/user/*.ts",
      "import": "./src/platform/user/*.js",
      "require": "./src/platform/user/*.js"
    },
    "./platform/admin/*": {
      "types": "./src/platform/admin/*.ts",
      "import": "./src/platform/admin/*.js", 
      "require": "./src/platform/admin/*.js"
    }
  }
}
